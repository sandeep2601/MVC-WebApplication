@model List<MVC_WebApplication.Context.tbl_Student>
@{
    ViewBag.Title = "StudentList";
}

<table class="table table-hover">
    <tr>
        <th>Name</th>
        <th>Father Name</th>
        <th>Email</th>
        <th>Mobile No</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.FName</td>
            <td>@item.Email</td>
            <td>@item.Mobile</td>
            <td>@item.Description</td>
            <td>
                <a href="@Url.Action("Student", new { item.ID, item.Name, item.FName, item.Email, item.Mobile, item.Description })" class="btn btn-success">Edit</a>
                <a href="@Url.Action("Delete", new { item.ID })" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>

